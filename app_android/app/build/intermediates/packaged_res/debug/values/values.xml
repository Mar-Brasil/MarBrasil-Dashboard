    <style name="Button.Auvo" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/auvo_primary</item>
        <item name="cornerRadius">8dp</item>
    </style>
    <style name="Button.Auvo.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/auvo_primary</item>
        <item name="strokeColor">@color/auvo_primary</item>
        <item name="cornerRadius">8dp</item>
    </style>
    <style name="CardView.Auvo" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="TextAppearance.Auvo.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    <style name="TextAppearance.Auvo.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    <style name="TextAppearance.Auvo.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextAppearance.Auvo.Title" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.PainelAuvo" parent="Theme.Material3.DayNight">
        
        <item name="colorPrimary">@color/auvo_primary</item>
        <item name="colorPrimaryVariant">@color/auvo_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/auvo_accent</item>
        <item name="colorSecondaryVariant">@color/auvo_accent</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <item name="android:statusBarColor">@color/auvo_primary_dark</item>
        
        <item name="android:windowBackground">@color/background_light</item>
        <item name="colorSurface">@color/background_card</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
    </style>
    <style name="Theme.PainelAuvo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.PainelAuvo.NoActionBar">
